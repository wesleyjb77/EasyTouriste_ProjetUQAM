<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="190dp"
    android:orientation="vertical"
    android:background="#234e6f"
    >

    <RelativeLayout
        android:id="@+id/entete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       >
        <TextView
            android:id="@+id/adresse_endroit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:textSize="20dp"
            android:textColor="#eded"
            android:text="Imp Moore, Route de Montagne Noire"
            android:layout_marginRight="60dp"
            android:layout_marginBottom="10dp"
            />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#fff"
            app:rippleColor="#fff"
            app:backgroundTint="@color/colorWhite"
            android:layout_alignParentRight="true"
            app:layout_anchorGravity="bottom|end"
            android:src="@drawable/ic_unfavorite"
            android:clickable="true"
            />

    </RelativeLayout>
<!--fok tout icone yo blanche, text yo dwe blan tou -->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
       android:layout_marginBottom="2dp"
        android:layout_below="@id/entete"

       >

        <ImageButton
            android:id="@+id/bt_mail"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            app:srcCompat="@drawable/ic_mail"
            android:background="@android:color/transparent"
            android:clickable="true"
            />


        <ImageButton
            android:id="@+id/bt_call"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:layout_margin="0dp"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/ic_call"
            android:clickable="true"
            />
        <ImageButton
            android:id="@+id/bt_direction"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/ic_direction"
            android:layout_margin="0dp"
            android:clickable="true"
            />

    </LinearLayout>

</RelativeLayout>
